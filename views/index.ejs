<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/styles.css" />
    <title>Ho</title>
  </head>
  <body>
    <%- include('header'); %>
    <div class="container mx-auto max-w-xl flex flex-col gap-4 pt-4">
      <% messages.forEach(message => { %>
      <div class="bg-zinc-800 p-4 rounded">
        <h2 class="text-2xl font-medium"><%= message.title %></h2>
        <p class="mt-4 text-zinc-200"><%= message.description %></p>
        <p class="mt-6">
          By
          <span class="italic text-purple-400 font-medium"
            ><%= currentUser ? message.author.username : 'Unknown' %></span
          >
        </p>
        <p class="mt-2">
          Posted on
          <span class="italic"><%= message.formattedDate %></span>
        </p>
      </div>
      <% }); %>
    </div>
  </body>
</html>
